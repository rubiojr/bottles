#!/usr/bin/env ruby
require 'Qt4'
require 'qtwebkit'
require 'yaml'
$: << File.dirname(__FILE__) + "/../lib/"
require 'bottles'

if ARGV.include? '-h' or ARGV.include? '--help'
  puts "Bottles version #{Bottles::VERSION}"
  $stdout.puts "\nUsage: bottle --run ~/.bottles/mybottle"
  exit 0
end

Bottles::App.run
